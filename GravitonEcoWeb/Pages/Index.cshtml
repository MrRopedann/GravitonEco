@page
@model IndexModel
@{
    ViewData["Title"] = "Мониторинг данных";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Graviton-ECO</title>
    <style>
        body {
            background-color: #1E1E1E;
            color: #BEBEBE;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .header {
            display: flex;
            justify-content: space-between;
            padding: 10px 20px;
            background-color: #171515;
            color: #32E650;
            align-items: center;
        }

            .header .info {
                display: flex;
                gap: 15px;
            }

                .header .info span {
                    color: #BEBEBE;
                    font-size: 17px;
                }

        .main-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            padding: 20px;
        }

        .table-container {
            background-color: #171515;
            padding: 15px;
            border-radius: 8px;
            width: 100%;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            text-align: center;
        }

        th, td {
            padding: 8px;
            border: 1px solid #505050;
        }

        th {
            background-color: #171515;
            color: #00E7FFBF;
        }

        tbody tr:nth-child(odd) {
            background-color: #323232; /* Цвет для нечетных строк */
        }

        tbody tr:nth-child(even) {
            background-color: #1E1E1E; /* Цвет для четных строк */
        }

        td.warning {
            color: #E64A19;
        }

        .right-panel {
            display: grid;
            gap: 15px;
            background-color: #171515;
            padding: 15px;
            border-radius: 8px;
        }

        .numeric-input {
            border: 2px solid #888; /* Стандартная серая рамка */
            border-radius: 4px; /* Скругленные углы */
            padding: 5px;
            width: 60px; /* Ширина поля */
            text-align: center; /* Центрируем текст внутри */
            background-color: transparent; /* Прозрачный фон */
            color: white; /* Цвет текста (если используется темная тема) */
            font-size: 16px;
        }

            /* Убираем стрелки для всех браузеров */
            .numeric-input::-webkit-inner-spin-button,
            .numeric-input::-webkit-outer-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

            .numeric-input::-moz-appearance {
                -moz-appearance: textfield;
            }

            /* Изменяем цвет рамки при фокусе */
            .numeric-input:focus {
                border: 2px solid #007bff; /* Синяя рамка при фокусе */
                outline: none; /* Убираем стандартное выделение */
            }

        .warning {
            color: #E64A19; /* Красный цвет для текста */
        }
    </style>
</head>
<body>
    <div class="main-content">
        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Параметр</th>
                        <th>Мин.</th>
                        <th>Макс.</th>
                        <th>Сред.</th>
                        <th>Текущ.</th>
                        <th>Порог 1</th>
                        <th>Порог 2</th>
                        <th>Нарастание</th>
                        <th>Период</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var param in Model.Parameters.Select((value, index) => new { value, index }))
                    {
                        <tr>
                            <td>@param.value.Name</td>
                            <td>@param.value.Min</td>
                            <td>@param.value.Max</td>
                            <td>@param.value.Average</td>
                            <td id="current-data-@param.index">@param.value.Current</td>

                            <!-- Поле ввода порога 1 -->
                            <td>
                                <input id="threshold1-data-@param.index" type="text" value="@param.value.Threshold1" class="numeric-input @(param.value.AlarmPorog1 ? "warning" : "")" pattern="\d*"
                                       onfocus="startEditing()" onblur="stopEditing()" onkeydown="submitValue(event, '@param.value.Name', 'Threshold1', this.value)" />
                            </td>

                            <!-- Поле ввода порога 2 -->
                            <td>
                                <input id="threshold2-data-@param.index" type="text" value="@param.value.Threshold2" class="numeric-input @(param.value.AlarmPorog2 ? "warning" : "")" pattern="\d*"
                                       onfocus="startEditing()" onblur="stopEditing()" onkeydown="submitValue(event, '@param.value.Name', 'Threshold2', this.value)" />
                            </td>

                            <!-- Поле ввода роста -->
                            <td>
                                <input id="growth-data-@param.index" type="text" value="@param.value.Growth" class="numeric-input @(param.value.AlarmPorog3 ? "warning" : "")" pattern="\d*"
                                       onfocus="startEditing()" onblur="stopEditing()" onkeydown="submitValue(event, '@param.value.Name', 'Growth', this.value)" />
                            </td>

                            <!-- Поле ввода периода -->
                            <td>
                                <input id="period-data-@param.index" type="text" value="@param.value.Period" class="numeric-input @(param.value.AlarmPorog3 ? "warning" : "")" pattern="\d*"
                                       onfocus="startEditing()" onblur="stopEditing()" onkeydown="submitValue(event, '@param.value.Name', 'Period', this.value)" />
                            </td>
                        </tr>
                    }
                </tbody>




            </table>
        </div>
    </div>

    <script src="~/js/site.js"></script>
</body>
</html>
