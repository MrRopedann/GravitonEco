@{
    ViewData["Title"] = "Вход";
    Layout = "_LoginLayout";
}

<!-- Контейнер с логотипом и формой -->
<div class="position-absolute top-50 start-50 translate-middle">
    <!-- Логотип -->
    <div class="logo">
        <img src="~/images/logo.svg" alt="Logo"> <!-- Замените "logo.png" на путь к вашему логотипу -->
    </div>

    <form asp-action="Login" class="mx-auto">
        <div class="form-group">
            <label for="username" class="fw-bold">Ваш Логин</label>
            <input type="text" name="username" id="username" class="form-control" />
        </div>
        <div class="form-group">
            <label for="password" class="fw-bold">Ваш Пароль</label>
            <input type="password" name="password" id="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary btn-block mt-3 btn-sm">Войти</button>
    </form>
</div>
