                <Label Content="Макс." Grid.Row="0" Grid.Column="3" Margin="6,5,5,5" Background="#FF171515" Foreground="#FF1996BE" HorizontalAlignment="Center"/>
                <Label Content="Сред." Grid.Row="0" Grid.Column="4" Margin="5,5,5,5" Background="#FF171515" Foreground="#FF1996BE" HorizontalAlignment="Center"/>
                <Label Content="Текущее" Grid.Row="0" Grid.Column="5" Margin="5,5,5,5" Background="#FF171515" Foreground="#FF1996BE" HorizontalAlignment="Center"/>
                <Label Content="Порог 1" Grid.Row="0" Grid.Column="6" Margin="5,5,5,5" Background="#FF171515" Foreground="#FF1996BE" HorizontalAlignment="Center"/>
                <Label Content="Порог 2" Grid.Row="0" Grid.Column="7" Margin="5,5,5,5" Background="#FF171515" Foreground="#FF1996BE" HorizontalAlignment="Center"/>
                <Label Content="Нарастание" Grid.Row="0" Grid.Column="8" Margin="5,5,5,5" Background="#FF171515" Foreground="#FF1996BE" HorizontalAlignment="Center"/>
                <Label Content="Период" Grid.Row="0" Grid.Column="9" Margin="5,5,5,5" Background="#FF171515" Foreground="#FF1996BE" HorizontalAlignment="Center"/>

